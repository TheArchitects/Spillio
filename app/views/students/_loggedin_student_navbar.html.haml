/ Fixed navbar
.navbar.navbar-default.navbar-fixed-top
  .container
    %a.navbar-brand{href: "#"} Spillio
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .navbar-collapse.collapse
      %form.navbar-form.navbar-left{role: "search", action: "/search/students"}
        .form-group
          %input.form-control{placeholder: "Search", type: "text", name: "query"}/
        %button.btn.btn-default{type: "submit"} Submit
      %ul.nav.navbar-nav.navbar-right
        / TODO: In the future, either show My Group or show requests
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            Group requests
            %span.badge 5
            %b.caret
          %ul.dropdown-menu
            %li
              =link_to "Request 1","#{student_path @authenticated_user}"
              %a.btn.btn-primary
                Accept
            %li
              =link_to "Request 2","#{edit_student_path @authenticated_user}"
              %a.btn.btn-primary
                Accept
        %li
          %a{href: "#"} My Group
        %li.dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
            = @authenticated_user.name
            %b.caret
          %ul.dropdown-menu
            %li
              =link_to "View Profile","#{student_path @authenticated_user}"
            %li
              =link_to "Edit Profile","#{edit_student_path @authenticated_user}"
            %li.divider
            %li
              =link_to "Logout","#{logout_path}"


    / /.nav-collapse
/ / Fixed navbar