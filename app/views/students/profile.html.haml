- content_for :title do
  = "Profile"
- content_for :styles do
  = stylesheet_link_tag 'student_profile'
  %link{:href=>"//cdn.jsdelivr.net/select2/3.4.4/select2.css", :rel=>"stylesheet"}
  %link{:href=>"//cdn.jsdelivr.net/select2/3.4.4/select2-bootstrap.css", :rel=>"stylesheet"}
- content_for :scripts do
  %script{:src=>"//cdn.jsdelivr.net/select2/3.4.4/select2.min.js"}
  = javascript_include_tag 'student_profile'

/ Navbar
= render "shared/navbar"

/ Page body
.container
  / Form
  .container
    = form_for @student, :html => {:class => 'form-horizontal', :role => 'form'} do |f|
      / Top section
      .row
        - if @view_only
          %h3 Student profile
        - else
          %h3 Edit your profile
        %hr/
        - if flash[:notice]
          .alert.alert-warning= flash[:notice]
        / Top left section
        #student-info-section.col-xs-12.col-sm-12.col-md-8.col-lg-8
          .panel.panel-default
            .panel-heading Personal info:
            .panel-body
              .form-group
                = f.label :name, 'Name: ', :class => 'col-lg-2 control-label'
                .col-lg-10
                  - if @view_only
                    %p= @student.name
                  - else
                    = f.text_field :name, :placeholder => 'Your name', :class => 'form-control', :disabled => @view_only, :required => true
              .form-group
                = f.label :section, 'Section: ', :class => 'col-lg-2 control-label'
                .col-lg-2
                  - if @view_only
                    - if not @student.section.nil?
                      %p= @student.section.number
                    - else
                      %p Not yet specified
                  - else
                    = collection_select :student, :section_id, Section.all, :id, :number, :class => 'form-control'
              .form-group
                = f.label :about, 'Description: ', :class => 'col-lg-2 control-label'
                .col-lg-10
                  - if @view_only
                    %p= @student.about
                  - else
                    = f.text_area :about, :class => 'form-control', :rows => '4', :required => true
        / / Top left section
        / Image section
        #image-section.col-xs-12.col-sm-12.col-md-4.col-lg-4
          .panel.panel-default
            .panel-heading Avatar:
            .panel-body
              %img#avatar-image.img-square.img-responsive{alt: "User profile", src: "https://cdn1.iconfinder.com/data/icons/perfect-flat-icons-2/512/User_man_male_profile_account_person_people.png"}/
              / = f.text_field :img_url, :class => 'form-control'
        / Image section
      / / Top section
      .row.hide
        #groups-section.container
          .well
            Groups will go here
      / Bottom section
      #other-section.row
        .col-xs-12.col-sm-12.col-md-4.col-lg-4
          = f.label :skills
          = f.hidden :skills
        .col-xs-12.col-sm-12.col-md-4.col-lg-4
          = f.label :courses
          = collection_select :student, :course_ids, Course.all, :id, :name, {}, :class => 'form-control', :multiple => true
        .col-xs-12.col-sm-12.col-md-4.col-lg-4
          = f.label :interest
          = f.text_area :interest, :class => 'form-control', :rows => '4'
      / / Bottom section
      .row
        .container
          - if @view_only
            - # PlaceHolder for edit
          - else
            = f.submit 'Save', :class => 'btn btn-primary pull-right'
  / / Form
/ / Page body