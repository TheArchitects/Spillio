- content_for :title do
  = "Dashboard"

- content_for :styles do
  = stylesheet_link_tag 'group_dash_board'

- content_for :scripts do
  %script{:src=>"//cdn.jsdelivr.net/select2/3.4.4/select2.min.js"}
  = javascript_include_tag 'new_assignment'

/ Navbar
= render "shared/navbar"

/ Page body
.container
  .container
    .row
      %h3= "New Assignment"
      %hr/
    .row
    / Left panel
    .col-lg-3.col-md-3.col-sm-12.col-xs-12
      .panel.panel-default
        .panel-body
          .panel.panel-default.assignment
            .panel-heading
              %h4.panel-title
                %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#"}
                  New Assignment
          .panel.panel-default.assignment
            .panel-heading
              %h4.panel-title
                %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#"}
                  Group Management
          .panel.panel-default.assignment
            .panel-heading
              %h4.panel-title
                %a{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#group-manage"}
                  Groups
            #group-manage.panel-collapse.collapse
              .card
                .btn-group
                  .btn-group
                    %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                      All Groups
                      %span.caret
                    %ul.dropdown-menu
                      %li
                        %a{href: "#"} Group 1
                      %li
                        %a{href: "#"} Group 2
                      %li
                        %a{href: "#"} Group 3
                      %li
                        %a{href: "#"} Group 4
                      %li
                        %a{href: "#"} Group 5
                      %li
                        %a{href: "#"} Group 6
                  %hr/
                  .btn-group
                    %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                      My Groups
                      %span.caret
                    %ul.dropdown-menu
                      %li
                        %a{href: "#"} Group 1
                      %li
                        %a{href: "#"} Group 2
    / / Left panel
    / Assignment dahsboard panel
    .col-lg-9.col-md-9.col-sm-12.col-xs-12
      #accordion.panel-group
        .panel.panel-default.assignment
          .panel-heading
          #assignment-5.panel-collapse
            .card
              %h4 Assignment Name
              .input-group{style: "width:50%"}
                %input.form-control{type: "text", name: "assignment_name"}/
              %hr/
              %h4 Due Date
              .input-group{style: "width:50%"}
                %input.form-control{type: "text", name: "due_date"}/
                %span.input-group-addon /2013
                .input-group-btn
                  / Button and dropdown menu
                  %button.btn.btn-default{type: "button"} Calendar
              %hr/
              %h4 Possible points
              .input-group{style: "width:50%"}
                %input.form-control{type: "text", name: "possible_points"}/
                .input-group-btn
                  / Button and dropdown menu
                  %button.btn.btn-default{type: "button"} Save
              %hr/
              %h4 Description
              .input-group{style: "width:100%"}
                %textarea.form-control{rows: "8", name: "description"}
              %hr/
              %h4 Required Submissions
              %table.table.table-striped#submissions
                %tr
                  %th Type
                  %th Name
                  %th Description
                %tr
                  %td
                    = select_tag "file type", options_for_select(['File', 'Link'])
                  %td
                    .input-group{style: "width:50%"}
                      %input.form-control{type: "text", name: "assignment_name_1", placeholder: "name"}/
                  %td
                    .input-group{style: "width:50%"}
                      %input.form-control{type: "text", name: "description1", placeholder: "description"}/
                %button.btn.btn-success{onclick: "addRow()", style: "float:right", type: "button"} Add Another File
        %br/
        %button.btn.btn-success{style: "float:right; margin-bottom:40px", type: "button"} Save Changes
      %br/
    / / Assignment dahsboard panel
